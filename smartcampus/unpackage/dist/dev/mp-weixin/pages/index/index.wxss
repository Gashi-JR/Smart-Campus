.content {
  position: relative;
  height: 100vh;
}
.content .logo {
  position: absolute;
  width: 100%;
  height: 29%;
  border-bottom-left-radius: 55rpx;
  border-bottom-right-radius: 55rpx;
  z-index: -1;
}
.content .text-area {
  position: absolute;
  /*绝对布局*/
  z-index: 1;
  /*置于上层*/
  right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 15rpx;
}
.content .location {
  width: 50rpx;
  height: 50rpx;
}
.content .title {
  font-size: 30rpx;
  color: white;
  margin-left: 30rpx;
}
.content .profile {
  position: absolute;
  top: 7%;
  display: flex;
  padding-left: 50rpx;
}
.content .btn {
  width: 170rpx;
}
.content .water {
  position: absolute;
  border-radius: 40rpx;
  height: 25%;
  width: 550rpx;
  top: 22%;
  box-shadow: 0 10rpx 0 0 #8db1fc;
  left: 100rpx;
}
.content .tab {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 57%;
  left: 50rpx;
}
.content .feature {
  position: absolute;
  left: 10%;
  top: 70%;
  display: flex;
  width: 80%;
  justify-content: space-around;
  align-items: flex-start;
}
.content .feature .feature_item {
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content .feature .feature_item .feature_icon {
  display: flex;
  justify-content: center;
  align-items: center;
}