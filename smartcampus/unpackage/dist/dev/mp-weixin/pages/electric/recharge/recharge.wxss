.table-header {
  display: flex;
  font-size: 40rpx;
  background-color: #e1dfdf;
  /* 设置背景颜色 */
}
.table-cell {
  padding: 16rpx;
  height: 4vh;
  text-align: left;
  line-height: 2vh;
  flex: 1;
  font-size: 27rpx;
  border: 1rpx solid #ababab;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.howmuch .uni-radio .uni-radio-input {
  height: 20rpx;
  /* 调整选择圈的高度 */
  width: 20rpx;
  /* 调整选择圈的宽度 */
}
.uni-column text {
  color: #69bcfc;
  /* 设置字体颜色为红色 */
  margin-right: 40rpx;
}
.uni-form-item .title {
  padding: 20rpx 0;
}
.zhifu {
  padding: 30rpx;
  /* 添加内边距 */
  border-bottom: 2rpx solid #ccc;
  /* 添加下方分隔线 */
}
.radio {
  float: right;
  /* 让按钮靠右 */
  font-size: 5rpx;
  /* 设置按钮的字体大小为12像素，实现按钮变小 */
  margin-right: 3rpx;
  /* 添加右侧间距 */
}
.checkout {
  display: flex;
  justify-content: flex-end;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-top: 1rpx solid #ededed;
  padding-top: 20rpx;
  /* 为内部内容顶部添加 10 像素的内边距 */
  padding-bottom: 10rpx;
}
.checkout .checkout1 {
  color: #f77a96;
  margin-right: 20rpx;
}
.checkout .checkout2 {
  margin-right: 20rpx;
}
.checkout .btn1 {
  margin: 0;
  color: #fde5e5;
  border-radius: 10rpx;
  background-color: #f52e2e;
  font-size: 21rpx;
  margin-right: 20rpx;
}